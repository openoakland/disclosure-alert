  %body
    %header.header.grid{role: "banner"}
      .header__wrapper.grid-col-12
        = link_to '&larr; Back to Open Disclosure'.html_safe, 'https://www.opendisclosure.io', class: 'header__pretitle-link'

        %a.header__title.header__title--md{href: "/", rel: "author", tabindex: "1"} Open Disclosure Alerts
        %nav.header-nav
          %input#header-nav-trigger.header-nav__trigger{type: "checkbox"}/
          %label{for: "header-nav-trigger"}
            %span.header-nav__menu-icon
              %svg{height: "15px", viewbox: "0 0 18 15", width: "18px"}
                %path{d: "M18,1.484c0,0.82-0.665,1.484-1.484,1.484H1.484C0.665,2.969,0,2.304,0,1.484l0,0C0,0.665,0.665,0,1.484,0 h15.031C17.335,0,18,0.665,18,1.484L18,1.484z", fill: "#FFFFFF"}
                %path{d: "M18,7.516C18,8.335,17.335,9,16.516,9H1.484C0.665,9,0,8.335,0,7.516l0,0c0-0.82,0.665-1.484,1.484-1.484 h15.031C17.335,6.031,18,6.696,18,7.516L18,7.516z", fill: "#FFFFFF"}
                %path{d: "M18,13.516C18,14.335,17.335,15,16.516,15H1.484C0.665,15,0,14.335,0,13.516l0,0 c0-0.82,0.665-1.484,1.484-1.484h15.031C17.335,12.031,18,12.696,18,13.516L18,13.516z", fill: "#FFFFFF"}
          .header-nav__items
            %a.header-nav__link-item{href: "https://www.opendisclosure.io/press/"} Press
            %a.header-nav__link-item{href: "https://www.opendisclosure.io/about/"} About
            %a.header-nav__link-item{href: "https://www.opendisclosure.io/faq/"} FAQ
        %a.header__title{href: "/", rel: "author"} OD Alerts

    - if flash[:error]
      .site-message.site-message--error
        = flash[:error]
    - if flash[:info]
      .site-message.site-message--info
        = flash[:info]

    = yield

    %footer.footer.grid
      .footer__wrapper.grid-col-12
        .footer__content.grid--full
          .footer__col.footer__left-col.grid-col-8
            .footer__top-content
              %h2.footer__heading
                %a.brand{href: "/"}
                  Open
                  %span.brand__em Disclosure
                  %span.brand__light Oakland
              %ul.footer__nav
                %li.footer__nav-item
                  %a{href: "/about/"} About
                %li.footer__nav-item
                  %a{href: "/press/"} Press
                %li.footer__nav-item
                  %a{href: "/faq/"} FAQ
                %li.footer__nav-item
                  %a{href: "https://caciviclab.org/opendisclosure/"} Join us
                %li.footer__nav-item
                  %a{href: "https://github.com/caciviclab/odca-jekyll#license"} Open source
                %li.footer__nav-item
                  %a{href: "https://registertovote.ca.gov/"} Register to vote
            .footer__bottom-content
              %h5.tagline
                Brought to you by
                %span.tagline__em
                  %a{href: "https://openoakland.org/"} Open Oakland
                and
                %span.tagline__em
                  %a{href: "https://www.oaklandca.gov/boards-and-commissions/public-ethics-commission"} Oaklandâ€™s Public Ethics Commission
              %h6.footer__stipulation
                Campaign finance data provided by the City of Oakland Public Ethics Commission
                = succeed "." do
                  %a{href: "http://nf4.netfile.com/pub2/Default.aspx?aid=COAK"} Public Portal for Campaign Finance and Lobbyist Disclosure
          .footer__col.grid-col-4
            .footer__voters-edge-widget
              %iframe{frameborder: "0", scrolling: "no", src: "https://votersedge.org/en/address-widget", style: "width:240px;height:198px;", title: "Enter your address for personalized voting information"}
